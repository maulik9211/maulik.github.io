---
// Supports weights 300-900
import "@fontsource-variable/figtree";
import "../global.css";
const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width" />

        <title>{title || "Maulik's Portfolio"}</title>

        <meta property="og:title" content={title || "Maulik's Portfolio"} />
        <meta
            property="og:image"
            content="https://maulik9211.github.io/maulik-low-res.jpeg"
        />
        <meta
            name="description"
            content="I am Maulik. Welcome to my portfolio website. Here I showcase my skills and projects that I have worked on. Contact me for freelance projects and collaborations."
        />
        <meta
            property="og:description"
            content="I am Maulik. Welcome to my portfolio website. Here I showcase my skills and projects that I have worked on. Contact me for freelance projects and collaborations."
        />

        <meta
            name="keywords"
            content="maulik, maulik jadav, freelancer, maulik software, maulik freelancer, maulik developer, maulik dev, mj, maulik j, maulik ahmedabad"
        />
        <meta
            name="google-site-verification"
            content="w4K5Ua94_GgjiTjUJuor3VKs5usWfiQJSIkC-eNcJBc"
        />

        <link
            rel="apple-touch-icon"
            sizes="180x180"
            href="https://maulik9211.github.io/apple-touch-icon.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="32x32"
            href="https://maulik9211.github.io/favicon-32x32.png"
        />
        <link
            rel="icon"
            type="image/png"
            sizes="16x16"
            href="https://maulik9211.github.io/favicon-16x16.png"
        />
        <link
            rel="manifest"
            href="https://maulik9211.github.io/site.webmanifest"
        />
    </head>
    <body class="text-slate-500">
        <slot />
    </body>
</html>
